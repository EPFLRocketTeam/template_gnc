<!-- Launch file to activate real-time simulator and connect to it the template_gnc algorithms-->
<launch>
  <param name="simulation" type="int" value="3" />
  
  <!-- Include nodes from simulator -->
  <include file="$(find real_time_simulator)/launch/rocket_sim.launch" />

  <!-- Overwrite parameters with the one on template_gnc -->
  <param name="launch_trigger_type" type="string" value="Thrust" />
  
  <group ns="rocket">
      <rosparam file="$(find template_utils)/config/rocket_parameters.yaml" />
  </group>

  <group ns="actuator">
      <rosparam file="$(find template_utils)/config/actuator_parameters.yaml" />
  </group>

  <group ns="environment">
      <rosparam file="$(find template_utils)/config/environment_parameters.yaml" />
  </group>

  <node name="template_control" pkg="template_control" type="template_control_node" output ="screen"/>
  <node name="template_navigation" pkg="template_navigation" type="template_navigation_node" output ="screen"/>
  <node name="template_guidance" pkg="template_guidance" type="template_guidance_node" output ="screen"/>
  <node name="template_fsm" pkg="template_fsm" type="template_fsm_node" output ="screen"/>
  <node name="av_interface" pkg="rocket_utils" type="av_interface.py" output ="screen"/>

</launch>


